{{#each movies as |movie|}}

  <div data-id="{{movie.id}}">
    <!--This also could be the key: getting movie.id in such a position that it can be
    passed through to api.destroy-->
    <div class="display-info">

      <h5>
        {{movie.title}}
      </h5>
      <form class="destroy" data-id="{{movie.id}}">
        <fieldset>
          <input type="submit" name="submit" value="Remove From Favorites">
        </fieldset>
      </form>
      <form class="update" data-id="{{movie.id}}">
        <fieldset>
          <input type="text" name="movie[title]" placeholder="Change Favorite">
          <input type="submit" name="submit" value="Update Movie">
        </fieldset>
      </form>
    </div>

</div>

{{/each}}
